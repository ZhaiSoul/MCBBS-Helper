{
  "manifest_version": 2,

  "name": "MCBBS扩展插件",
  "description": "能够实现MCBBS消息提醒等功能",
  "version": "1.0",
    "background": {
        "scripts": ["core.js", "background.js"]
	},
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
      "128": "icon.png"
   },
  "permissions": [
		"alarms",
		"tabs",
		"storage",
		"activeTab",
		"notifications",
		"http://*.mcbbs.net/*",
		"webRequestBlocking",
		"cookies",
		"downloads"
    ]
}
